// Game plan ver 2 1. Generate (all combinations) 2. Prune (remove duplicates) 3. Test (check if it satisfies AA + BB + CC = ABC)

antar att vi använder oss av std::rand()?

/**************************************************************************
 Author: Lukas Larsson, Marcus Ekroth
 Course: tnd012, lab3, exercise 4
************************************************************************* */

#include <iostream>


int main() 
{
    //Trying all combinations (10^3 combinations)
    for (int A = 0; A <= 9; A++) {

        for (int B = 0; B <= 9; B++) {

            for (int C = 0; C <= 9; C++) {

                //gets rid of invalid combinations (equivalence between letters not allowed)
                if (A == B or A == C or B == C) {
                    continue;
                }
                {
                }

                int AA = 10 * A + A;
                int BB = 10 * B + B;
                int CC = 10 * C + C;
                int ABC = 100 * A + 10 * B + C;
                
                //trying the equation
                if (AA + BB + CC == ABC) {
                    std::cout << "Solution :" << ABC << std::endl;

                }
            }
        }
    }
}


// Jag tänkte 

#include <iostream>

int main() {
    for (int A = 0; A <= 9; A++) {
        for (int B = 0; B <= 9; B++) {
            for (int C = 0; C <= 9; C++) { // nested loops for A, B, C
                if (A != B and A != C and B != C) { //only continues if all variubels are difrent

                    int AA = A * 10 + A; // A in both the tens place and the oneces place
                    int BB = B * 10 + B; // B in both the tens place and the oneces place
                    int CC = C * 10 + C; // C in both the tens place and the oneces place
                    int ABC = A * 100 + B * 10 + C; //Puts A in the hundreds place B in the tens place and C in the ones place

                    if (AA + BB + CC == ABC) {
                        std::cout << "Solution found! "
                            << "A = " << A
                            << ", B = " << B
                            << ", C = " << C << "\n";
                        std::cout << AA << " + " << BB << " + " << CC << " = " << ABC << "\n\n"; // Prints resullt
                    }
                }
            }
        }
    }
    return 0;
}
